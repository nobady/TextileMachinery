<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".forum.ui.activity.ForumActivity"
        android:orientation="vertical"
        >

    <com.game.base.wdget.HeaderView
            android:id="@+id/mActSuppHead"
            android:layout_width="match_parent"
            android:layout_height="41.5dp"
            />

    <LinearLayout
            android:id="@+id/mActSearchLl"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingLeft="15dp"
            android:background="@android:color/white"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="12dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/icon_search_gray"
                android:background="@drawable/forum_search_bg"
                android:text="@string/search"
                />
    </LinearLayout>

    <android.support.design.widget.TabLayout
            android:id="@+id/mActSuppTab"
            android:layout_width="match_parent"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabSelectedTextColor="@color/meTitleColor"
            app:tabTextColor="@color/subTextColor"
            app:tabIndicatorColor="@color/meTitleColor"
            app:tabMinWidth="15dp"
            app:tabMode="scrollable"
            android:layout_height="38.5dp"
            />

    <android.support.v4.view.ViewPager
            android:id="@+id/mActSuppVp"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    </android.support.v4.view.ViewPager>

</LinearLayout>