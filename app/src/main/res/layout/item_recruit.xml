<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="15dp"
        android:paddingBottom="13dp"
        android:background="@android:color/white"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/mRecruitType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高级喷水纺织维修工"
            android:textSize="16sp"
            android:padding="2dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"/>

    <TextView
            android:id="@+id/mRecruitCompany"
            app:layout_constraintTop_toBottomOf="@+id/mRecruitType"
            android:text="浙江绍兴防止器械有限公司"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/mJobPrice"
            app:layout_constraintRight_toRightOf="parent"
            android:text="7-15K/月"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/meTitleColor"
            android:layout_height="wrap_content"/>

    <View
            style="@style/Line"
            android:id="@+id/recruit_line"
            app:layout_constraintTop_toBottomOf="@+id/mRecruitCompany"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"/>

    <ImageView
            app:layout_constraintTop_toBottomOf="@+id/recruit_line"
            android:id="@+id/mRecruitAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/default_header"/>

    <TextView
            android:id="@+id/mRecruitDesc"
            android:text="期权，五险一金，带薪年假，"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@+id/mRecruitAvatar"
            app:layout_constraintTop_toBottomOf="@+id/recruit_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/mRecruitTime"
            android:text="9小时前更新"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@+id/mRecruitAvatar"
            app:layout_constraintTop_toBottomOf="@+id/mRecruitDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/mRecruitContact"
            android:textSize="16sp"
            android:textColor="@color/rankTextColor"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/receive_invitation"
            android:padding="5dp"
            android:background="@drawable/rank_tv_bg_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>