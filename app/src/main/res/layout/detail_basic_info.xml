<?xml version="1.0" encoding="utf-8"?>
<merge>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <ImageView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/detail_phone_sign"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_info"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/mainTextColor"
                    />

        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="3dp"
                >

            <TextView
                    android:id="@+id/mMechType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mech_type"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/mainTextColor"
                    />

            <TextView
                    android:id="@+id/mDetailMechType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="津田驹X5860-1"
                    android:layout_toRightOf="@+id/mMechType"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FF414141"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spec"
                    android:textSize="14sp"
                    android:layout_toLeftOf="@+id/mDetailSpec"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/mainTextColor"
                    />

            <TextView
                    android:id="@+id/mDetailSpec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="津田驹X5860-1"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FF414141"
                    />

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="3dp"
                >

            <TextView
                    android:id="@+id/mCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/count"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/mainTextColor"
                    />

            <TextView
                    android:id="@+id/mDetailCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="232"
                    android:layout_toRightOf="@+id/mCount"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FF414141"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_date"
                    android:textSize="14sp"
                    android:layout_toLeftOf="@+id/mDetailProductDate"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/mainTextColor"
                    />

            <TextView
                    android:id="@+id/mDetailProductDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="津田驹X5860-1"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FF414141"
                    />

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="3dp"
                >

            <TextView
                    android:id="@+id/mLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/mainTextColor"
                    />

            <TextView
                    android:id="@+id/mDetailLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙江杭州城区"
                    android:layout_toRightOf="@+id/mLocation"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FF414141"
                    />

        </RelativeLayout>
    </LinearLayout>
</merge>