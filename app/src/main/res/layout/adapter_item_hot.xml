<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="12dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="3dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <ImageView android:layout_width="match_parent" android:layout_height="166dp"
                   android:scaleType="fitXY"
                   android:id="@+id/iv_hot_adapter"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="@dimen/normal_font_16"
                  android:textColor="@color/black"
                  android:id="@+id/tv_hot_adapter_name"
                  android:layout_marginLeft="8dp"
                  android:layout_marginTop="8dp"
                  tools:text="脚钉既就是"
                  app:layout_constraintTop_toBottomOf="@id/iv_hot_adapter"
                  app:layout_constraintLeft_toLeftOf="parent"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="@dimen/small_font_12"
                  app:layout_constraintTop_toBottomOf="@id/tv_hot_adapter_name"
                  android:id="@+id/tv_hot_adapter_style"
                  app:layout_constraintLeft_toLeftOf="parent"
                  android:layout_marginLeft="8dp"
                  tools:text="型号：sdaasd"
                  android:textColor="@color/text_dept_grey_color"
        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="@dimen/normal_font_16"
                  android:textColor="@color/hot_price"
                  app:layout_constraintTop_toBottomOf="@id/tv_hot_adapter_style"
                  app:layout_constraintLeft_toLeftOf="parent"
                  android:layout_marginLeft="8dp"
                  android:layout_marginTop="16dp"
                  tools:text="价格：53万"
                  android:id="@+id/tv_hot_adapter_price"
        />

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@id/tv_hot_adapter_style"
                   app:layout_constraintRight_toRightOf="parent"
                   android:src="@mipmap/shop_car"
                   android:id="@+id/iv_hot_adapter_car"
                   android:layout_marginTop="16dp"
                   android:layout_marginRight="8dp"
        />

    <View android:layout_width="match_parent" android:layout_height="12dp"
          app:layout_constraintTop_toBottomOf="@id/iv_hot_adapter_car"
    />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>