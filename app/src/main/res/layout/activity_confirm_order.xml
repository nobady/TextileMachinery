<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".shop_car.ConfirmOrderActivity"
        >


    <ImageView
            android:id="@+id/iv_order_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_location"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_order_receiver_address"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/small_font_14"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toRightOf="@id/iv_order_location"
            android:layout_marginStart="15dp"
            android:id="@+id/tv_order_receiver_people"
            tools:text="王小明"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/small_font_14"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_order_receiver_people"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="29dp"
            tools:text="19985642537"
            android:id="@+id/tv_order_receiver_phone"
            />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/small_font_14"
            app:layout_constraintTop_toBottomOf="@id/tv_order_receiver_people"
            android:layout_marginTop="8dp"
            tools:text="收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            app:layout_constraintRight_toLeftOf="@id/iv_order_right"
            app:layout_constraintWidth_percent="0.84"
            app:layout_constraintLeft_toRightOf="@id/iv_order_location"
            android:id="@+id/tv_order_receiver_address"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/iv_order_location"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            android:id="@+id/iv_order_right"
            android:src="@mipmap/right_arrow"
            />

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/orderRecycler"
            app:layout_constraintBottom_toBottomOf="@id/layout_include"
            app:layout_constraintTop_toBottomOf="@id/tv_order_receiver_address"
            />

    <include
        layout="@layout/layout_order_buy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/layout_include"
    />


</android.support.constraint.ConstraintLayout>