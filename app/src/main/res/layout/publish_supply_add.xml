<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@android:color/white"
        >

    <TextView
            android:id="@+id/select_star"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="*"
            android:textSize="18sp"
            android:textColor="@color/red"
            />

    <TextView
            android:id="@+id/tab_select_pic"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/supply_add"
            android:gravity="center"
            android:textSize="@dimen/tab_font_size"
            app:layout_constraintLeft_toRightOf="@+id/select_star"
            android:textColor="@color/mainTextColor"
            />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:textSize="14sp"
            android:maxLength="200"
            android:textColor="@color/subTextColor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_select_pic"
            android:hint="@string/input_supply_add"
            />

</android.support.constraint.ConstraintLayout>