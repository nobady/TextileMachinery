<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools">


    <ImageView
            android:id="@+id/iv_adapter_address_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/order_location"
            app:layout_constraintTop_toTopOf="@id/tv_adapter_address_address"
            app:layout_constraintBottom_toBottomOf="@id/view"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/small_font_14"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@id/iv_adapter_address_location"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_adapter_address_people"
            tools:text="王小明"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/small_font_14"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_adapter_address_people"
            app:layout_constraintRight_toLeftOf="@id/view"
            android:layout_marginRight="15dp"
            tools:text="19985642537"
            android:id="@+id/tv_adapter_address_phone"
    />

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/small_font_14"

            app:layout_constraintTop_toBottomOf="@id/tv_adapter_address_people"
            android:layout_marginTop="8dp"
            tools:text="收货地址收货地址收货地址收货地址收货地址收货地址收货地址收货地址"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:maxLines="2"
            app:layout_constraintRight_toLeftOf="@id/view"
            app:layout_constraintLeft_toRightOf="@id/iv_adapter_address_location"
            android:id="@+id/tv_adapter_address_address"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="@dimen/small_font_12"
              android:textColor="@color/text_b7"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginRight="15dp"
              tools:text="编辑"
              android:id="@+id/tv_adapter_address_edit"
    />
    
    <View android:layout_width="1dp" android:layout_height="22dp"
        app:layout_constraintRight_toLeftOf="@id/tv_adapter_address_edit"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginRight="15dp"
          android:id="@+id/view"
          app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>
