<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".shop_car.ui.ChangeAddressActivity">

    <com.game.base.wdget.HeaderView
            android:id="@+id/changeAddressHeadView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
    />

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:orientation="horizontal"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="@color/grey"
                  android:layout_gravity="center_vertical"
                  android:textSize="@dimen/small_font_14"
                  android:text="@string/receiver_people_change_address"
                  android:layout_marginLeft="12dp"
        />

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:textSize="@dimen/small_font_14"
                  android:layout_marginLeft="20dp"
                  android:textColor="@color/black"
                  android:background="@null"
                  android:id="@+id/et_activity_change_receiver_people"
        />

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/divide_line"
    />

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:orientation="horizontal"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="@color/grey"
                  android:layout_gravity="center_vertical"
                  android:textSize="@dimen/small_font_14"
                  android:text="@string/receiver_phone_change_address"
                  android:layout_marginLeft="12dp"
        />

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:textSize="@dimen/small_font_14"
                  android:layout_marginLeft="20dp"
                  android:inputType="phone"
                  android:textColor="@color/black"
                  android:background="@null"
                  android:id="@+id/et_activity_change_receiver_phone"
        />

    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/divide_line"
    />

    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp"
                  android:orientation="horizontal"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="@color/grey"
                  android:layout_gravity="center_vertical"
                  android:textSize="@dimen/small_font_14"
                  android:text="@string/receiver_phone_change_address"
                  android:layout_marginLeft="12dp"
        />

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:textSize="@dimen/small_font_14"
                  android:layout_marginLeft="20dp"
                  android:inputType="phone"
                  android:textColor="@color/black"
                  android:background="@null"
                  android:id="@+id/et_activity_change_receiver_address"
        />

    </LinearLayout>




</LinearLayout>