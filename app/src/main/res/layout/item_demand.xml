<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="15dp"
        android:paddingBottom="13dp"
        android:background="@android:color/white">

    <ImageView
            android:id="@+id/demand_icon"
            android:background="@drawable/demand_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    <TextView
            android:id="@+id/mDemandTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求购二手好用喷水纺织器械设备"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/demand_icon"/>

    <TextView
            android:id="@+id/demand_content"
            app:layout_constraintTop_toBottomOf="@+id/demand_icon"
            app:layout_constraintLeft_toRightOf="@+id/demand_icon"
            android:text="·品牌:津田驹  ·型号:不限  ·新旧度:8成新 /n
            ·其他:可以正常使用"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/mDemandPrice"
            app:layout_constraintTop_toBottomOf="@+id/demand_content"
            app:layout_constraintLeft_toRightOf="@+id/demand_icon"
            android:text="预算价格：20万以内"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/meTitleColor"
            android:layout_height="wrap_content"/>


    <TextView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="一天前发布"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:textColor="@color/timeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/mMeUserRank"
            android:textSize="10sp"
            android:textColor="@color/rankTextColor"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/contact_it"
            android:padding="5dp"
            android:background="@drawable/rank_tv_bg_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>