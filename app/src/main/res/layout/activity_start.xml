<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:src="@drawable/login_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="126dp"
    />

    <TextView
            android:id="@+id/tv_start_login"
            android:layout_width="match_parent" android:layout_height="45dp"
            android:text="@string/login_login"
            android:background="@drawable/shape_login_btn_bg"
            android:layout_marginLeft="87dp"
            android:layout_marginRight="87dp"
            app:layout_constraintBottom_toTopOf="@id/tv_start_register"
            android:layout_marginBottom="15dp"
            android:textSize="@dimen/normal_font_16"
            android:gravity="center"
            android:textColor="@color/white"
    />
    <TextView
            android:textSize="@dimen/normal_font_16"
            android:id="@+id/tv_start_register"
            android:layout_width="match_parent" android:layout_height="45dp"
            android:text="@string/login_register"
            android:background="@drawable/shape_login_btn_bg_white"
            android:layout_marginLeft="87dp"
            android:layout_marginRight="87dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="130dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              android:text="@string/login_banquan"
              android:textColor="@color/grey"
              android:textSize="@dimen/small_font_10"
              app:layout_constraintBottom_toBottomOf="parent"
              android:layout_marginBottom="20dp"
    />


</android.support.constraint.ConstraintLayout>