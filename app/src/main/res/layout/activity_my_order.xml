<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".me.ui.activity.MyOrderActivity">

    <com.game.base.wdget.HeaderView
            android:id="@+id/mOrderHead"
            android:layout_width="match_parent"
            android:layout_height="41.5dp"/>

    <android.support.design.widget.TabLayout
            android:id="@+id/mOrderTab"
            android:layout_width="match_parent"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabSelectedTextColor="@color/meTitleColor"
            app:tabTextColor="@color/subTextColor"
            app:tabIndicatorColor="@color/meTitleColor"
            android:layout_height="38.5dp"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/mOrderVp"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>