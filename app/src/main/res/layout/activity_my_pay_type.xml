<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.textile.client.me.ui.activity.MyPayTypeActivity"
        android:background="@color/meBackground"
        android:orientation="vertical">

    <com.game.base.wdget.HeaderView
            android:id="@+id/mPayHeadView"
            android:layout_width="match_parent"
            android:layout_height="41.5dp">
    </com.game.base.wdget.HeaderView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="70dp">

        <ImageView
                android:id="@+id/weChatIcon"
                android:layout_width="40dp"
                android:src="@drawable/message"
                android:scaleType="centerInside"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"/>

        <TextView
                android:layout_toRightOf="@+id/weChatIcon"
                android:layout_width="wrap_content"
                android:text="@string/we_chat_pay"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="@color/mainTextColor"
                android:gravity="start|center_vertical"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/mWeChatPay"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:text="@string/toPay"
                android:textColor="@color/to_pay_color"
                android:background="@drawable/pay_tv_bg_shape"
                android:gravity="center"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="12sp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_height="70dp">

        <ImageView
                android:id="@+id/aliPayIcon"
                android:layout_width="40dp"
                android:src="@drawable/message"
                android:scaleType="centerInside"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"/>

        <TextView
                android:layout_toRightOf="@+id/aliPayIcon"
                android:layout_width="wrap_content"
                android:text="@string/ali_pay"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="@color/mainTextColor"
                android:gravity="start|center_vertical"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/mALiPay"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:text="@string/toPay"
                android:textColor="@color/to_pay_color"
                android:background="@drawable/pay_tv_bg_shape"
                android:gravity="center"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="12sp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_height="70dp">

        <ImageView
                android:id="@+id/bankCardIcon"
                android:layout_width="40dp"
                android:src="@drawable/message"
                android:scaleType="centerInside"
                android:layout_marginLeft="15dp"
                android:layout_height="match_parent"/>

        <TextView
                android:layout_toRightOf="@+id/bankCardIcon"
                android:layout_width="wrap_content"
                android:text="@string/bank_card_pay"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="@color/mainTextColor"
                android:gravity="start|center_vertical"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/mBankCardPay"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:text="@string/toPay"
                android:textColor="@color/to_pay_color"
                android:background="@drawable/pay_tv_bg_shape"
                android:gravity="center"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="12sp"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>